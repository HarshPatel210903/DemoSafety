@page
@model DemoSafety.Pages.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <style>
        small {
            color: #ff4d4d !important;
        }
    </style>
</head>
<body>
    <section class="vh-100 gradient-custom">
        <div class="container py-1 h-100">
            <div class="row d-flex justify-content-center align-items-center h-auto">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5 h-auto">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5">
                            <form id="login-form" class="">
                                <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                                <p class="text-white-50 mb-3">Enter Login Details</p>
                                <div class="form-outline form-white mb-4">
                                    <label class="form-label" for="log-user">Email</label>
                                    <input type="text" id="log-user" maxlength="40" class="form-control form-control-lg" />
                                    <small id="log-usererr" class="form-text"></small>
                                </div>
                                <div class="row align-items-center mb-4">
                                    <div class="form-outline form-white">
                                        <label class="form-label" for="log-pass">Password</label>
                                        <div class="row">
                                            <div class="col">
                                                <input type="password" maxlength="40" id="log-pass" class="form-control form-control-lg" />
                                            </div>
                                            <div class="col-auto ">
                                                <button type="button" id="toggle-btn" class="h-100 py-2 px-3 btn btn-light">
                                                    <i class="bi h-auto bi-eye"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <small id="log-passerr" class="form-text"></small>
                                    </div>
                                </div>
                                <div class="row align-items-center mb-4">
                                    <div class="form-outline form-white">
                                        <label class="form-label" for="Organization">Organization</label>
                                        <select id="Organization" class="form-control form-control-lg" asp-items="Model.Organizations">
                                            <option value="" selected disabled>Select Organization</option>
                                        </select>
                                        <small id="Organizationerr" class="form-text"></small>
                                    </div>
                                </div>
                                <button id="loginBtn" class="btn btn-outline-light btn-lg px-5" type="button">Login</button>
                            </form>
                            <script src="~/js/Login.js"></script> 
                        </div>
                        <div class="toast-container  position-fixed top-0 end-0 p-3">
                            <div id="liveToast" class="toast w-auto" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="2000">
                                <div class="d-flex">
                                    <div class="toast-body">
                                        Hello, world! This is a toast message.
                                    </div>
                                    <button type="button" class="btn-close my-auto mx-2" data-bs-dismiss="toast" aria-label="Close"></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
</html>